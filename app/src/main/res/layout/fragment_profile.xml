<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.crowderia.mytoz.fragment.ProfileFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginBottom="@dimen/ad_text_margin_vertical"
                    android:textSize="@dimen/text_size"
                    android:text="@string/lbl_profile_text_name"/>

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:hint="@string/lbl_profile_name"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/text_size"
                    android:focusable="false"
                    android:maxLength="20"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:layout_marginBottom="@dimen/ad_text_margin_vertical"
                    android:textSize="@dimen/text_size"
                    android:text="@string/lbl_profile_text_phone"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:hint="@string/lbl_profile_phone"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/text_size"
                    android:focusable="false"
                    android:maxLength="16"
                    android:inputType="phone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:layout_marginBottom="@dimen/ad_text_margin_vertical"
                    android:textSize="@dimen/text_size"
                    android:text="@string/lbl_profile_text_email"/>
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:hint="@string/lbl_profile_email"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/text_size"
                    android:focusable="false"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:textSize="@dimen/text_size"
                    android:text="@string/lbl_profile_text_gender"/>
                <Spinner
                    android:id="@+id/spinSex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/button_image_margin"
                    android:hint="@string/lbl_profile_gender"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:textSize="@dimen/text_size"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:layout_marginBottom="@dimen/ad_text_margin_vertical"
                    android:textSize="@dimen/text_size"
                    android:text="@string/lbl_profile_text_birthday"/>
                <EditText
                    android:id="@+id/etDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:hint="@string/lbl_profile_birthday"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/text_size"
                    android:maxLines="1"
                    android:focusable="false"
                    android:cursorVisible="false" />

                <Button
                    android:id="@+id/btn_save_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="Save"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>